<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    tools:context=".ui.SplashActivity"
    android:orientation="vertical">

    <!-- TODO Adjust size according to screen size -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        android:contentDescription="@string/desc_logo"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id = "@+id/splash_lbl_heading"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text = "@string/app_name"
        android:textSize = "35sp"/>

    <!-- TODO Insert introduction to the app -->

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/splash_lbl_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/app_description"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/splash_btn_login"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circular_button"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/splash_btn_tologin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>