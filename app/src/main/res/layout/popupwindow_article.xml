<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:elevation="20dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/md_theme_light_secondaryContainer">

    <TextView
        android:id="@+id/popup_txt_title"
        style="@style/article_popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/news_txt_titlePlaceholder" />

    <TextView
        android:id="@+id/popup_txt_summary"
        style="@style/article_popup_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/news_txt_titlePlaceholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/popup_btn_readLater"
            style="@style/article_popup_btns"
            android:layout_marginStart="@dimen/popup_buttons_separation"
            android:contentDescription="@string/popup_desc_readLater"
            android:src="@drawable/readlater_icon_outline" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/popup_btn_fav"
            style="@style/article_popup_btns"
            android:layout_marginStart="@dimen/popup_buttons_separation"
            android:contentDescription="@string/popup_desc_fav"
            android:src="@drawable/favorite_icon_outline" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/popup_btn_share"
            style="@style/article_popup_btns"
            android:layout_marginStart="@dimen/popup_buttons_separation"
            android:contentDescription="@string/popup_desc_webView"
            android:src="@drawable/share_icon" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/popup_btn_openWeb"
            style="@style/article_popup_btns"
            android:layout_marginStart="@dimen/popup_buttons_separation"
            android:layout_marginEnd="@dimen/popup_buttons_separation"
            android:contentDescription="@string/popup_desc_webView"
            android:src="@drawable/web_icon" />

    </LinearLayout>

</LinearLayout>